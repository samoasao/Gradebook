<p id="notice"><%= notice %></p>

<h1>Scores</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Student Name</th>
      <th>Subject</th>
      
      <th>Objective</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scores.each do |score| %>
      <% assignment = score.assignment %>
      <tr>
      <td><%= score.schedule_item.day %></td>
        <td><%= assignment.student.name %></td>
        <td><%= score.schedule_item.subject.name %></td>
        
        <td><%= assignment.objective.description %></td>
        <td><%= score.value %></td>
        <td><%= link_to 'Show', score %></td>
        <td><%= link_to 'Edit', edit_score_path(score) %></td>
        <td><%= link_to 'Destroy', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Score', new_score_path %>
